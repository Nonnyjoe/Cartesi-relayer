{
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"outDir": "./dist"
	    },
	"include": [
		"src/index.ts",
		"tests"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}